<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "mybatis-3-config.dtd">
<configuration>
	<typeAliases>
		<typeAlias type="com.sds.model2app.domain.Board" alias="Board"/>
	</typeAliases>

	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC" />
			<dataSource type="POOLED">
				<property name="driver" value="com.mysql.jdbc.Driver" />
				<property name="url" value="jdbc:mysql://localhost:3306/javaee?characterEncoding=utf-8" />
				<property name="username" value="root" />
				<property name="password" value="" />
			</dataSource>
		</environment>
	</environments>
	
	<!--SQL문이 작성된 XML 들의 경로를 아래에 등록 -->
	<mappers>
		<mapper resource="com/sds/model2app/mybatis/BoardMapper.xml" />
	</mappers>
</configuration>